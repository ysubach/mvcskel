<?xml version="1.0" encoding="ISO-8859-1"?>
<!-- TestCase Runner configuration file -->
<configuration>

    <DataobjectTestSetup>

	<!-- the database dsn -->
	<database>mysql://root:@shark.whx/mvcskel_test</database>
    <class_prefix>Model_</class_prefix>
    <class_location>Model</class_location>
	<!-- default debugging level -->
	<debug>0</debug>

	<!-- Place a finding of a file with structure of a database -->
	<schema_location>./database</schema_location>

	<!-- File name for creation and fillings with data of tables -->
	<setupSQLFile>../docs/mvcskel.sql, ./database/data.sql</setupSQLFile>

    </DataobjectTestSetup>
    
    <testPath>.</testPath>

  <logger>
    <!-- see docs for PEAR::Log for all possible handlers -->
    <handler>file</handler>
    <!-- most of all you have to have full path there -->
    <!-- and it should not be under your web folder -->
    <name>tmp/log.txt</name>
    <!-- levels are from 0 (no debug) to 7 (log all) -->
    <!-- see docs for PEAR::Log for all possible levels -->
    <level>7</level>
  </logger>

</configuration>